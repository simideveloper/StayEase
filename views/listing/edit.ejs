<% layout('layouts/boilerplate.ejs')-%>
<body>
    <h3>Edit the list:</h3>
    <form method="post" action="/listing/<%=list.id%>?_method=PUT">
        <input name="listing[title]" value="<%=list.title%>" type="text"><br><br>
        <textarea name="listing[description]"><%=list.description%></textarea><br><br>
        <input name="listing[price]" value="<%=list.price%>" type="number"><br><br>
        <input name="listing[country]" value="<%=list.country%>" type="text"><br><br>
        <input name="listing[location]" value="<%=list.location%>" type="text"><br><br>
        <button>edit</button>
    </form>
</body>
