<% layout('layouts/boilerplate.ejs')-%>

<body>
  <%-include('./filter.ejs') %>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <%for(let list of alllistings){%>
            <a href="http://localhost:8080/listing/<%=list._id %>" class="listing-link">
                <div class="card col listing-card">
                    <img class="card-img-top" src="<%=list.image.url %>" alt="image of place">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                      <p class="card-text"><b><%=list.title%></b><br>
                        &#8377;<%=list.price.toLocaleString('en-IN')%>/night
                        <i class="tax-info">&nbsp; &nbsp; +18% GST</i>
                    </p>
                    </div>
                  </div>
            </a>
          <%}%>
    </div>
   
</body>